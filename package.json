{
  "name": "LiveHost",
  "displayName": "Live Host",
  "publisher": "zhoumingjie",
  "description": "1. Quickly edit system hosts file;； 2. Get best ip about github",
  "repository": {
		"type": "git",
		"url": "https://github.com/mingjiezhou/notes.git"
	},
  "version": "1.0.3",
	"icon": "logo.png",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
		"*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "host",
        "extensions": [
          ".host"
        ],
        "aliases": [
          "host"
        ]
      }
    ],
    "grammars": [
      {
        "language": "host",
        "scopeName": "source.host",
        "path": "./syntaxes/host.tmLanguage.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "liveHost",
          "title": "liveHost",
          "icon": "resources/host.png"
        }
      ]
    },
    "views": {
      "liveHost": [
        {
          "id": "liveHost",
          "name": "host"
        },
        {
          "id": "liveHostAuto",
          "name": "host-auto"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "liveHostAuto",
        "contents": "\n [获取配置 GitHub Host](command:liveHost.start) \n 欢迎使用live host ^_^，[使用手册](https://github.com/mingjiezhou/notes/issues/13)，源码 [Github](https://github.com/mingjiezhou/live-host)"
      }
    ],
    "commands": [
      {
        "command": "liveHost.start",
        "title": "liveHost.start"
      },
      {
        "command": "liveHost.choose",
        "title": "Choose"
      },
      {
        "command": "liveHost.unchoose",
        "title": "UnChoose"
      },
      {
        "command": "liveHost.rename",
        "title": "Rename"
      },
      {
        "command": "liveHost.delete",
        "title": "Delete"
      },
      {
        "command": "liveHost.add",
        "title": "Add",
        "icon": {
          "light": "resources/light/add.svg",
          "dark": "resources/dark/add.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "liveHost.add",
          "when": "view == liveHost",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "liveHost.unchoose",
          "when": "view == liveHost && viewItem == hostItem1",
          "group": "host@1"
        },
        {
          "command": "liveHost.choose",
          "when": "view == liveHost && viewItem == hostItem0",
          "group": "host@1"
        },
        {
          "command": "liveHost.rename",
          "when": "view == liveHost && viewItem =~ /hostItem/i",
          "group": "host@1"
        },
        {
          "command": "liveHost.delete",
          "when": "view == liveHost && viewItem =~ /hostItem/i",
          "group": "host@1"
        },
        {
          "command": "liveHost.add",
          "when": "view == liveHost && viewItem =~ /hostItem/i",
          "group": "host@1"
        }
      ]
    },
    "configuration": {
      "properties": {
        "host-auto.fundGroups": {
          "type": "string",
          "default": [
            "我的基金"
          ],
          "description": "配置基金分组名称（建议通过界面新增）"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {

  },
  "dependencies": {
    "axios": "^0.19.2",
    "cheerio": "^1.0.0-rc.10",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "14.x",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.14.0",
    "glob": "^8.0.1",
    "mocha": "^9.2.2",
    "typescript": "^4.6.4"
  }
}
